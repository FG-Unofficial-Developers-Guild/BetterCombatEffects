<?xml version="1.0" encoding="iso-8859-1"?>

<root version="3.0">
	<string name="string_migrate_title">Announcement</string>

    <windowclass name="migrator">
        <margins control="0,0,0,7" />
        <frame>utilitybox3</frame>
        <placement>
            <size width="600" height="315" />
        </placement>
		<sizelimits>
			<minimum width="600" height="315" />
			<dynamic />
		</sizelimits>
        <sheetdata>
            <windowtitlebar name="title">
                <resource>migrate_effects</resource>
            </windowtitlebar>
            <anchor_title_utilitybox3 name="contentanchor" />

            <frame_utilitybox3 name="frame_migrator">
				<anchored height="150" />
            </frame_utilitybox3>

            <migrate_message name="message" />

            <button_preview_bce name="preview" />
            <button_migrate name="migrate" />
            <label name = "showlabel">
                <anchored to="migrate" position="righthigh" offset="10,0"/>
                <static textres="label_dont_show" />
            </label>
            <button_checkbox name="noshow">
                <anchored  to="showlabel" position="righthigh" width="10" height="20" />
			</button_checkbox>

            <helper_color />
			<resize_utilitybox3 />
            <close_utilitybox3 />
        </sheetdata>
    </windowclass>

    <template name="migrate_message">
        <formattedtextcontrol>
            <anchored to="frame_migrator">
                <top offset="20" />
                <left offset="20" />
                <right offset="-20" />
            </anchored>
            <readonly />
            <script file="utility/scripts/utility_migrate.lua" />
        </formattedtextcontrol>
    </template>

    <template name="button_preview_bce">
        <button_migration>
            <anchored>
                <right anchor="center" offset="-15" />
            </anchored>
            <text>Preview</text>
            <script>
                function onButtonPress()
                    MigrationManagerBCE.migration(false);
                    if super and super.onButtonPress() then
                        super.onButtonPress();
                    end
                end
            </script>
        </button_migration>
    </template>

    <template name="button_migrate">
        <button_migration>
            <anchored>
                <left anchor="center" offset="15" />
            </anchored>
            <text>Migrate</text>
            <script>
                function onButtonPress()
                    MigrationManagerBCE.migration(true);
                    window.noshow.setValue(1);
                    if super and super.onButtonPress() then
                        super.onButtonPress();
                    end
                end
            </script>
        </button_migration>
    </template>
    <template name="button_migration">
        <buttoncontrol>
            <anchored width="100" height="20">
                <bottom offset="-30" />
            </anchored>
            <height>20</height>
            <frame name="buttonup" offset="5,5,5,5" />
            <stateframe>
                <pressed name="buttondown" offset="5,5,5,5" />
            </stateframe>
            <font>button-white</font>
        </buttoncontrol>
    </template>
</root>